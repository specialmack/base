{
  "name": "base",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm dev:frontend",
    "dev:frontend": "pnpm --dir frontend dev",
    "build": "pnpm build:frontend",
    "build:frontend": "pnpm --dir frontend build",
    "lint": "pnpm lint:frontend",
    "lint:frontend": "eslint frontend/src",
    "format": "pnpm format:frontend",
    "format:frontend": "pnpm prettier --write frontend/src",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "eslint": "^9.26.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "typescript-eslint": "^8.31.1",
    "prettier": "^3.5.3"
  },
  "lint-staged": {
    "./**/*.{ts,tsx}": [
      "pnpm format",
      "pnpm lint"
    ]
  }
}
